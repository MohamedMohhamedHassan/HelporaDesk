@model ServiceCore.Models.User
@{
    ViewData["Title"] = "Change Password";
}

<div class="content">
    <div class="mb-4">
        <h1 class="h3 fw-700">Change Password</h1>
        <p class="text-muted small">Update password for <strong>@Model.Name</strong> (@Model.Email)</p>
    </div>

    <div class="card glass border-0 shadow-sm" style="max-width: 500px;">
        <div class="card-body p-4">
            <form asp-action="ChangePassword" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="mb-3">
                    <label class="form-label fw-600 small">New Password</label>
                    <input type="password" name="newPassword" class="form-control" placeholder="Enter new password" required autocomplete="new-password" />
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary px-4">Update Password</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
