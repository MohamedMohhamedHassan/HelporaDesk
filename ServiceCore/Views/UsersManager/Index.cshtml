@model IEnumerable<ServiceCore.Models.User>
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a class="btn btn-primary" href="/UsersManager/Create">Create User</a>
    <a class="btn btn-outline-secondary ms-2" href="/UsersManager/Export">Export CSV</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Role</th>
            <th>Department</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Name</td>
            <td>@u.Role</td>
            <td>@u.Department</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" href="/UsersManager/Edit/@u.Id">Edit</a>
                <form method="post" asp-action="Delete" asp-route-id="@u.Id" style="display:inline">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
