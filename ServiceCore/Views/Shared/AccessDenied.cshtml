@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass border-0 shadow-lg p-5">
                <div class="mb-4">
                    <i class="bi bi-shield-slash text-danger" style="font-size: 5rem;"></i>
                </div>
                <h1 class="fw-bold text-danger mb-3">Access Denied</h1>
                <p class="lead text-muted mb-4">
                    Sorry, you don't have the required permissions to access this page or feature. 
                    Please contact your system administrator if you believe this is an error.
                </p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a href="/" class="btn btn-primary px-4 gap-3">Return Home</a>
                    <button onclick="history.back()" class="btn btn-outline-secondary px-4">Go Back</button>
                </div>
            </div>
        </div>
    </div>
</div>
