@model ServiceCore.Models.ProjectTask

@{
    ViewData["Title"] = "Task Details";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="h4 fw-bold mb-0">@Model.Title</h1>
                        <span class="badge bg-light text-dark border">@Model.Status</span>
                    </div>
                    
                    <p class="text-secondary mb-4">@Model.Description</p>

                    <div class="d-flex gap-4">
                        <div>
                            <div class="small fw-bold text-secondary">Priority</div>
                            <span class="badge bg-light text-dark">@Model.Priority</span>
                        </div>
                         <div>
                            <div class="small fw-bold text-secondary">Due Date</div>
                            <div>@Model.DueDate?.ToShortDateString()</div>
                        </div>
                        <div>
                            <div class="small fw-bold text-secondary">Assignee</div>
                            <div class="d-flex align-items-center gap-2 mt-1">
                                <div class="avatar-xs bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:24px;height:24px;font-size:10px;">
                                    @(Model.Assignee?.Name.Substring(0,1) ?? "?")
                                </div>
                                <small>@(Model.Assignee?.Name ?? "Unassigned")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold">Comments</h6>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        @foreach(var comment in Model.Comments.OrderBy(c => c.CreatedAt)) {
                            <div class="d-flex gap-3 mb-3">
                                <div class="avatar-sm bg-light text-secondary rounded-circle d-flex align-items-center justify-content-center border" style="width:32px;height:32px;">
                                    @(comment.User?.Name.Substring(0,1) ?? "U")
                                </div>
                                <div>
                                    <div class="small fw-bold">@(comment.User?.Name ?? "Unknown") <span class="text-muted fw-normal ms-2">@comment.CreatedAt.ToString("g")</span></div>
                                    <div class="small mt-1">@comment.Content</div>
                                </div>
                            </div>
                        }
                        @if(!Model.Comments.Any()) {
                            <div class="text-muted small">No comments yet.</div>
                        }
                    </div>

                    <form asp-action="AddComment" method="post" class="mb-4">
                        <input type="hidden" name="taskId" value="@Model.Id" />
                        <div class="mb-2">
                            <textarea name="content" class="form-control" rows="2" placeholder="Write a comment..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary">Post Comment</button>
                    </form>

                    <h6 class="fw-bold mb-3">Attachments</h6>
                    <div class="mb-3">
                        @foreach (var file in Model.Attachments)
                        {
                            <div class="d-flex align-items-center gap-2 mb-2 p-2 border rounded bg-light">
                                <i class="bi bi-file-earmark-text text-primary"></i>
                                <a href="@file.FilePath" target="_blank" class="text-decoration-none text-dark small fw-medium">@file.FileName</a>
                                <span class="text-muted small ms-auto">@file.UploadedAt.ToShortDateString()</span>
                            </div>
                        }
                        @if(!Model.Attachments.Any()) {
                             <div class="text-muted small mb-2">No files attached.</div>
                        }
                    </div>
                    
                    <form asp-action="UploadAttachment" method="post" enctype="multipart/form-data">
                         <input type="hidden" name="taskId" value="@Model.Id" />
                         <div class="input-group input-group-sm">
                             <input type="file" name="file" class="form-control" required />
                             <button type="submit" class="btn btn-outline-secondary">Upload</button>
                         </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Actions</h6>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Edit Task</a>
                        <button class="btn btn-outline-danger">Delete Task</button>
                    </div>
                    
                    <hr class="my-3">
                    
                    <div class="small text-muted">
                        <div>Project: <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectId">@Model.Project?.Name</a></div>
                        <div class="mt-2">Created: @DateTime.Now.ToString("d")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
