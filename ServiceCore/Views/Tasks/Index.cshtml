@model IEnumerable<ServiceCore.Models.ProjectTask>

@{
    ViewData["Title"] = "Tasks";
    int projectId = ViewData["ProjectId"] as int? ?? 0;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 fw-bold">Tasks</h1>
            <p class="text-secondary small mb-0">Track and manage project deliverables.</p>
        </div>
        <div class="d-flex gap-2">
            @if(projectId != 0) {
            <a asp-action="Create" asp-route-projectId="@projectId" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                <i class="bi bi-plus-lg"></i> New Task
            </a>
            } else {
             <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                <i class="bi bi-plus-lg"></i> New Task
            </a>   
            }
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Assignee</th>
                            <th>Due Date</th>
                            <th class="pe-4 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-dark fw-bold text-decoration-none">@item.Title</a>
                                        @if(item.Project != null) {
                                            <small class="text-muted">@item.Project.Name</small>
                                        }
                                    </div>
                                </td>
                                <td><span class="badge bg-light text-dark border">@item.Status</span></td>
                                <td>
                                    @if(item.Priority == "High" || item.Priority == "Critical") {
                                        <span class="badge bg-danger">@item.Priority</span>
                                    } else {
                                        <span class="badge bg-light text-dark border">@item.Priority</span>
                                    }
                                </td>
                                <td>
                                    @if(item.Assignee != null) {
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-xs bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:24px;height:24px;font-size:10px;">
                                                @item.Assignee.Name.Substring(0,1)
                                            </div>
                                            <span class="small">@item.Assignee.Name</span>
                                        </div>
                                    } else {
                                        <span class="text-muted small">Unassigned</span>
                                    }
                                </td>
                                <td>
                                    @if(item.DueDate.HasValue) {
                                        <span class="@(item.DueDate < DateTime.Now ? "text-danger fw-bold" : "")">
                                            @item.DueDate.Value.ToShortDateString()
                                        </span>
                                    } else {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
