@model ServiceCore.Models.ProjectTask

@{
    ViewData["Title"] = "Delete Task";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 border-danger">
            <div class="card-header bg-danger text-white py-3">
                <h4 class="mb-0 fw-bold">Delete Task?</h4>
            </div>
            <div class="card-body p-4">
                <h5 class="card-title text-danger">Are you sure you want to delete this task?</h5>
                <p class="card-text text-muted">This action cannot be undone.</p>
                
                <div class="p-3 bg-light rounded mb-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Task</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Title</dd>
                        
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                        
                        <dt class="col-sm-4">Project</dt>
                        <dd class="col-sm-8">@Model.Project?.Name</dd>
                    </dl>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">Delete Task</button>
                        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
