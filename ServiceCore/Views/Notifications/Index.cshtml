@model IEnumerable<ServiceCore.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 fw-bold">Notifications</h1>
                <button class="btn btn-outline-secondary btn-sm">Mark all as read</button>
            </div>

            <div class="list-group shadow-sm">
                @foreach (var item in Model) {
                    <div class="list-group-item list-group-item-action d-flex gap-3 py-3 @(item.IsRead ? "bg-light text-muted" : "")">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">@item.Title</h6>
                                <p class="mb-0 opacity-75 small">@item.Message</p>
                                @if(!string.IsNullOrEmpty(item.LinkAction)) {
                                    <a href="@item.LinkAction" class="small mt-1 d-block">View Details</a>
                                }
                            </div>
                            <small class="text-nowrap text-muted">@item.CreatedAt.ToShortDateString()</small>
                        </div>
                    </div>
                }
                @if(!Model.Any()) {
                    <div class="list-group-item p-4 text-center text-muted">No notifications.</div>
                }
            </div>
        </div>
    </div>
</div>
