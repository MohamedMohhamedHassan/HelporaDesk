@{
    ViewData["Title"] = "Solutions Dashboard";
    var mostViewed = (List<ServiceCore.Models.Solution>)ViewBag.MostViewed;
    var contributors = (List<dynamic>)ViewBag.Contributors;
    var needsReview = (List<ServiceCore.Models.Solution>)ViewBag.NeedsReview;
}

<div class="content">
    <div class="mb-4 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="h3 fw-bold mb-1">Knowledge Base Analytics</h1>
            <p class="text-muted small">Performance and maintenance metrics for solutions</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-primary btn-sm shadow-sm">
                <i class="bi bi-grid me-2"></i>Browse All
            </a>
            <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>New Solution
            </a>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm text-center p-3">
                <h6 class="text-muted small fw-bold">TOTAL ARTICLES</h6>
                <div class="h2 fw-bold text-primary mb-0">@ViewBag.TotalCount</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm text-center p-3">
                <h6 class="text-muted small fw-bold text-success">PUBLISHED</h6>
                <div class="h2 fw-bold text-success mb-0">@ViewBag.PublishedCount</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm text-center p-3">
                <h6 class="text-muted small fw-bold text-info">PENDING</h6>
                <div class="h2 fw-bold text-info mb-0">@ViewBag.PendingCount</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm text-center p-3">
                <h6 class="text-muted small fw-bold text-warning">DRAFTS</h6>
                <div class="h2 fw-bold text-warning mb-0">@ViewBag.DraftCount</div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Most Viewed -->
        <div class="col-lg-7">
            <div class="card glass border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-graph-up me-2"></i>Most Viewed Solutions</h5>
                </div>
                <div class="card-body p-4">
                    <div class="list-group list-group-flush">
                        @foreach (var sol in mostViewed)
                        {
                            <a asp-action="Details" asp-route-id="@sol.Id" 
                               class="list-group-item list-group-item-action bg-transparent px-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-bold">@sol.Title</div>
                                    <small class="text-muted">@sol.Topic?.Name</small>
                                </div>
                                <span class="badge bg-primary rounded-pill">@sol.Views views</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Contributors -->
        <div class="col-lg-5">
            <div class="card glass border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0"><i class="bi bi-people me-2"></i>Top Contributors</h5>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="list-group list-group-flush text-start">
                        @foreach (var c in contributors)
                        {
                            <div class="list-group-item bg-transparent px-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-person-circle fs-5 me-2 text-primary"></i>
                                    <span class="fw-bold">@c.Name</span>
                                </div>
                                <span class="badge bg-secondary">@c.Count articles</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Maintenance Tracking -->
        <div class="col-12">
            <div class="card glass border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0 text-danger"><i class="bi bi-calendar-event me-2"></i>Articles Needing Review</h5>
                </div>
                <div class="card-body p-4">
                    @if (!needsReview.Any())
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-check-circle fs-1 mb-2"></i>
                            <p>All articles are up to date!</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle bg-transparent">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Topic</th>
                                        <th>Review Due</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sol in needsReview)
                                    {
                                        <tr>
                                            <td class="fw-bold">@sol.Title</td>
                                            <td><span class="badge bg-primary-subtle text-primary">@sol.Topic?.Name</span></td>
                                            <td class="text-danger fw-bold">@sol.ReviewDate?.ToString("MMM dd, yyyy")</td>
                                            <td><span class="badge bg-secondary">@sol.Status</span></td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@sol.Id" class="btn btn-sm btn-outline-primary">Update</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
