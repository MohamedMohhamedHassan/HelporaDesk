@model List<ServiceCore.Models.Solution>
@{
    ViewData["Title"] = "Solutions - Knowledge Base";
    var topics = (List<ServiceCore.Models.SolutionTopic>)ViewBag.Topics;
    var selectedTopicId = (int?)ViewBag.SelectedTopicId;
    var search = (string)ViewBag.Search;
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="display-6 fw-bold mb-1">Solutions</h1>
            <p class="text-muted mb-0">Knowledge Base & Solutions Library</p>
        </div>
        <div class="d-flex gap-2">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Dashboard" class="btn btn-outline-info shadow-sm">
                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </a>
            }
            <secure-content asp-authorize="@ServiceCore.Constants.Permissions.Solutions_Manage">
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>New Solution
            </a>
            </secure-content>
        </div>
    </div>

    <!-- Filters -->
    <div class="card glass border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <form method="get" class="row g-3 align-items-center">
                <div class="@(User.IsInRole("Admin") ? "col-md-3" : "col-md-5")">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input class="form-control bg-transparent border-0" name="search" 
                               value="@search" placeholder="Search solutions..." />
                    </div>
                </div>
                <div class="@(User.IsInRole("Admin") ? "col-md-3" : "col-md-4")">
                    <select name="topicId" class="form-select border-0 bg-light">
                        <option value="">All Topics</option>
                        @foreach (var topic in topics)
                        {
                            <option value="@topic.Id" selected="@(selectedTopicId == topic.Id)">
                                @topic.Name
                            </option>
                        }
                    </select>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-md-3">
                        <select name="status" class="form-select border-0 bg-light">
                            <option value="Published" selected='@(ViewBag.SelectedStatus == "Published")'>Published</option>
                            <option value="Draft" selected='@(ViewBag.SelectedStatus == "Draft")'>Draft</option>
                            <option value="Approved" selected='@(ViewBag.SelectedStatus == "Approved")'>Pending Approval</option>
                            <option value="Expired" selected='@(ViewBag.SelectedStatus == "Expired")'>Expired</option>
                            <option value="" selected='@(string.IsNullOrEmpty(ViewBag.SelectedStatus))'>All Statuses</option>
                        </select>
                    </div>
                }
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Solutions Table -->
    <div class="card glass border-0 shadow-lg">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted smaller-1 fw-700">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>TITLE</th>
                            <th>TOPIC</th>
                            <th class="text-center">STATUS</th>
                            <th class="text-center">VIEWS</th>
                            <th>CREATED BY</th>
                            <th>CREATED ON</th>
                            <th class="text-end pe-4">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var solution in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@solution.Id</td>
                                    <td>
                                        <div class="fw-700">@solution.Title</div>
                                        <div class="d-flex gap-2 align-items-center">
                                            @if (!string.IsNullOrEmpty(solution.Keywords))
                                            {
                                                <div class="text-muted smaller-2">
                                                    <i class="bi bi-tags"></i> @solution.Keywords
                                                </div>
                                            }
                                            @if (User.IsInRole("Admin") && solution.ReviewDate.HasValue && solution.ReviewDate.Value <= DateTime.Now && solution.Status != "Expired")
                                            {
                                                <span class="badge rounded-pill text-bg-warning smaller-2" title="Needs technical review">
                                                    <i class="bi bi-exclamation-triangle me-1"></i>TECHNICAL REVIEW
                                                </span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary-subtle text-primary">
                                            @solution.Topic?.Name
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var statusClass = solution.Status switch
                                            {
                                                "Published" => "text-bg-success",
                                                "Approved" => "text-bg-info",
                                                "Draft" => "text-bg-secondary",
                                                "Expired" => "text-bg-danger",
                                                _ => "text-bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@solution.Status</span>
                                    </td>
                                    <td class="text-center">
                                        <i class="bi bi-eye text-muted"></i> @solution.Views
                                    </td>
                                    <td>@solution.Creator?.Name</td>
                                    <td>@solution.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@solution.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                    No solutions found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
