@model ServiceCore.Models.Solution
@{
    ViewData["Title"] = Model.Title;
}

<div class="content">
    <div class="mb-4 d-flex justify-content-between align-items-start">
        <div>
            <div class="d-flex align-items-center gap-2 mb-2">
                <h1 class="h3 fw-bold mb-0">@Model.Title</h1>
                @{
                    var statusClass = Model.Status switch
                    {
                        "Published" => "text-bg-success",
                        "Approved" => "text-bg-info",
                        "Draft" => "text-bg-secondary",
                        "Expired" => "text-bg-danger",
                        _ => "text-bg-secondary"
                    };
                }
                <span class="badge @statusClass">@Model.Status</span>
            </div>
            <div class="text-muted small">
                <span class="badge bg-primary-subtle text-primary me-2">@Model.Topic?.Name</span>
                <i class="bi bi-person me-1"></i> @Model.Creator?.Name
                <i class="bi bi-calendar ms-3 me-1"></i> @Model.CreatedAt.ToString("MMM dd, yyyy")
                <i class="bi bi-eye ms-3 me-1"></i> @Model.Views views
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-pencil"></i> Edit
            </a>
            @if (User.IsInRole("Admin"))
            {
                @if (Model.Status == "Draft")
                {
                    <form method="post" asp-action="Approve" asp-route-id="@Model.Id" class="d-inline">
                        <button type="submit" class="btn btn-info btn-sm">
                            <i class="bi bi-check-circle"></i> Approve
                        </button>
                    </form>
                }
                @if (Model.Status == "Approved")
                {
                    <form method="post" asp-action="Publish" asp-route-id="@Model.Id" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-cloud-arrow-up"></i> Publish
                        </button>
                    </form>
                }
            }
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Solution Content -->
            <div class="card glass border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Solution Details</h5>
                    <div class="solution-content">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>

            <!-- Attachments -->
            @if (Model.Attachments.Any())
            {
                <div class="card glass border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-paperclip me-2"></i>Attachments
                        </h5>
                        <div class="list-group">
                            @foreach (var attachment in Model.Attachments)
                            {
                                <a href="@attachment.FilePath" target="_blank" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-file-earmark me-2"></i>
                                        <span class="fw-600">@attachment.FileName</span>
                                        <small class="text-muted ms-2">
                                            by @attachment.User?.Name on @attachment.UploadedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <i class="bi bi-download"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Metadata -->
            <div class="card glass border-0 shadow-sm mb-3">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3">Information</h6>
                    <dl class="row mb-0 small">
                        @if (Model.Owner != null)
                        {
                            <dt class="col-sm-5 text-muted">Owner:</dt>
                            <dd class="col-sm-7">@Model.Owner.Name</dd>
                        }
                        @if (!string.IsNullOrEmpty(Model.Keywords))
                        {
                            <dt class="col-sm-5 text-muted">Keywords:</dt>
                            <dd class="col-sm-7">
                                @foreach (var keyword in Model.Keywords.Split(','))
                                {
                                    <span class="badge bg-secondary-subtle text-secondary me-1">@keyword.Trim()</span>
                                }
                            </dd>
                        }
                        @if (Model.ReviewDate.HasValue)
                        {
                            <dt class="col-sm-5 text-muted">Review Date:</dt>
                            <dd class="col-sm-7">@Model.ReviewDate.Value.ToString("MMM dd, yyyy")</dd>
                        }
                        @if (Model.ExpiryDate.HasValue)
                        {
                            <dt class="col-sm-5 text-muted">Expiry Date:</dt>
                            <dd class="col-sm-7">@Model.ExpiryDate.Value.ToString("MMM dd, yyyy")</dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Quick Actions -->
            @if (User.IsInRole("Admin"))
            {
                <div class="card border-danger bg-danger bg-opacity-10">
                    <div class="card-body p-3">
                        <h6 class="fw-bold text-danger mb-2">Danger Zone</h6>
                        <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
                            <button type="submit" class="btn btn-danger btn-sm w-100" 
                                    onclick="return confirm('Delete this solution permanently?')">
                         <i class="bi bi-trash"></i> Delete Solution
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
