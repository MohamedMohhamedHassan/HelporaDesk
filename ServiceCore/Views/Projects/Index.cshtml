@model IEnumerable<ServiceCore.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 fw-bold">Projects</h1>
            <p class="text-secondary small mb-0">Manage your active projects and workflows.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
            <i class="bi bi-plus-lg"></i> New Project
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model) {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="badge bg-light text-dark border">@item.Status</span>
                            <div class="dropdown">
                                <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                    <span class="dots">•••</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                    <secure-content asp-authorize="@ServiceCore.Constants.Permissions.Projects_Edit">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                    </secure-content>
                                    <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <secure-content asp-authorize="@ServiceCore.Constants.Permissions.Projects_Manage">
                                    <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                    </secure-content>
                                </ul>
                            </div>
                        </div>
                        
                        <h5 class="card-title fw-bold">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark stretched-link">@item.Name</a>
                        </h5>
                        <p class="card-text text-muted small text-truncate-2">@item.Description</p>
                        
                        <div class="mt-4 d-flex justify-content-between align-items-end">
                            <div class="avatar-group">
                                @* Placeholder avatars *@
                                <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:32px;height:32px;font-size:12px;">TD</div>
                            </div>
                            <div class="text-end">
                                <div class="small fw-bold text-dark">@item.Tasks?.Count(t => t.Status != "Done") open tasks</div>
                                <div class="small text-muted" style="font-size: 0.75rem;">Due @item.EndDate.ToShortDateString()</div>
                            </div>
                        </div>
                        
                        <div class="progress mt-3" style="height: 6px;">
                            @{
                                var done = item.Tasks?.Count(t => t.Status == "Done") ?? 0;
                                var total = item.Tasks?.Count ?? 0;
                                var pct = total > 0 ? (done * 100 / total) : 0;
                            }
                            <div class="progress-bar bg-success" role="progressbar" style="width: @pct%" aria-valuenow="@pct" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
