@model ServiceCore.Models.User
@{
    ViewData["Title"] = "Invite User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h4 class="mb-0 fw-bold text-primary">Invite New Team Member</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Invite">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" name="email" class="form-control" required
                               placeholder="colleague@example.com" />
                    </div>

                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        @{
                            var roles = ViewBag.Roles as List<string> ?? (ViewBag.Roles as string[])?.ToList() ?? new
                        List<string> { "User" };
                        }
                        <select name="role" class="form-select">
                            @foreach (var r in roles)
                            {
                                <option value="@r">@r</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="department" class="form-label">Department</label>
                        @{
                            var depts = ViewBag.Departments as List<string> ?? (ViewBag.Departments as string[])?.ToList()
                        ?? new List<string> { "General" };
                        }
                        <select name="department" class="form-select">
                            @foreach (var d in depts)
                            {
                                <option value="@d">@d</option>
                            }
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Send Invitation</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}