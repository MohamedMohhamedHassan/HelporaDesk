@model ServiceCore.Models.User
@{
    ViewData["Title"] = "Invite User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h4 class="mb-0 fw-bold text-primary">Invite New Team Member</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Invite">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" name="email" class="form-control" required placeholder="colleague@example.com" />
                    </div>

                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select name="role" class="form-select">
                            @if(ViewBag.Roles != null) {
                                foreach(var r in (List<string>)ViewBag.Roles) {
                                    <option value="@r">@r</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="department" class="form-label">Department</label>
                        <select name="department" class="form-select">
                            @if(ViewBag.Departments != null) {
                                foreach(var d in (List<string>)ViewBag.Departments) {
                                    <option value="@d">@d</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Send Invitation</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
