@{
    ViewData["Title"] = "System Administration";
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="display-6 fw-bold mb-1">System Administration</h1>
            <p class="text-muted mb-0">Manage system-wide metadata and configurations.</p>
        </div>
        <div>
            <a asp-action="ManageRoles" class="btn btn-outline-primary shadow-sm me-2">
                <i class="bi bi-people me-2"></i>Manage Roles
            </a>
            <a asp-action="ManagePermissions" class="btn btn-primary shadow-sm">
                <i class="bi bi-shield-lock me-2"></i>Manage Permissions
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Categories -->
        <div class="col-12 col-xl-4">
            <div class="card glass border-0 h-100 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-700 mb-0">Ticket Categories</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UpsertCategory" method="post" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="name" class="form-control" placeholder="New Category..." required />
                            <button type="submit" class="btn btn-primary px-3"><i class="bi bi-plus-lg"></i></button>
                        </div>
                    </form>
                    <div class="list-group list-group-flush">
                        @foreach (var cat in (List<ServiceCore.Models.TicketCategory>)ViewBag.Categories)
                        {
                            <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0 border-sc">
                                <span class="fw-500">@cat.Name</span>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-action" onclick="editItem(@cat.Id, '@cat.Name', 'UpsertCategory')"><i class="bi bi-pencil"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Priorities -->
        <div class="col-12 col-xl-4">
            <div class="card glass border-0 h-100 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-700 mb-0">Ticket Priorities</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UpsertPriority" method="post" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="name" class="form-control" placeholder="New Priority..." required />
                            <button type="submit" class="btn btn-primary px-3"><i class="bi bi-plus-lg"></i></button>
                        </div>
                    </form>
                    <div class="list-group list-group-flush">
                        @foreach (var prio in (List<ServiceCore.Models.TicketPriority>)ViewBag.Priorities)
                        {
                            <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0 border-sc">
                                <span class="fw-500">@prio.Name</span>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-action" onclick="editItem(@prio.Id, '@prio.Name', 'UpsertPriority')"><i class="bi bi-pencil"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Departments -->
        <div class="col-12 col-xl-4">
            <div class="card glass border-0 h-100 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-700 mb-0">Departments</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UpsertDepartment" method="post" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="name" class="form-control" placeholder="New Department..." required />
                            <button type="submit" class="btn btn-primary px-3"><i class="bi bi-plus-lg"></i></button>
                        </div>
                    </form>
                    <div class="list-group list-group-flush">
                        @foreach (var dept in (List<ServiceCore.Models.Department>)ViewBag.Departments)
                        {
                            <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0 border-sc">
                                <span class="fw-500">@dept.Name</span>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-action" onclick="editItem(@dept.Id, '@dept.Name', 'UpsertDepartment')"><i class="bi bi-pencil"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Simple Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass shadow-lg border-0">
            <div class="modal-header border-0 pb-0 px-4">
                <h5 class="modal-title fw-700">Edit Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="editForm" method="post">
                    <input type="hidden" id="editId" name="id" />
                    <div class="mb-3">
                        <label class="form-label fw-600 small">Name</label>
                        <input type="text" id="editName" name="name" class="form-control" required />
                    </div>
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function editItem(id, name, action) {
        document.getElementById('editId').value = id;
        document.getElementById('editName').value = name;
        document.getElementById('editForm').action = '/Admin/' + action;
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }
</script>
