@{
    ViewData["Title"] = "System Administration";
    var categories = (List<ServiceCore.Models.TicketCategory>)ViewBag.Categories;
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="display-6 fw-bold mb-1">System Administration</h1>
            <p class="text-muted mb-0">Manage system-wide metadata and configurations.</p>
        </div>
        <div>
            <a asp-action="ManageTopics" class="btn btn-outline-success shadow-sm me-2">
                <i class="bi bi-lightbulb me-2"></i>Manage Topics
            </a>
            <a asp-action="ManageRoles" class="btn btn-outline-primary shadow-sm me-2">
                <i class="bi bi-people me-2"></i>Manage Roles
            </a>
            <a asp-action="ManagePermissions" class="btn btn-primary shadow-sm">
                <i class="bi bi-shield-lock me-2"></i>Manage Permissions
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Categories (Hierarchical) -->
        <div class="col-12 col-xl-6">
            <div class="card glass border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-700 mb-0">Ticket Categories</h5>
                    <button class="btn btn-sm btn-primary" onclick="openCreateCategoryModal()">
                        <i class="bi bi-plus-lg me-1"></i>New Category
                    </button>
                </div>
                <div class="card-body p-4">
                    <div class="category-tree">
                        @if (!categories.Any())
                        {
                            <p class="text-muted text-center py-4">No categories defined yet.</p>
                        }
                        else
                        {
                            @await Html.PartialAsync("_CategoryTree", categories.Where(c => c.ParentId == null).ToList())
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side: Priorities and Departments -->
        <div class="col-12 col-xl-6">
            <div class="row g-4">
                <!-- Priorities -->
                <div class="col-12">
                    <div class="card glass border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0 pt-4 px-4">
                            <h5 class="fw-700 mb-0">Ticket Priorities</h5>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="UpsertPriority" method="post" class="mb-4">
                                <div class="input-group">
                                    <input type="text" name="name" class="form-control" placeholder="New Priority..." required />
                                    <button type="submit" class="btn btn-primary px-3"><i class="bi bi-plus-lg"></i></button>
                                </div>
                            </form>
                            <div class="list-group list-group-flush">
                                @foreach (var prio in (List<ServiceCore.Models.TicketPriority>)ViewBag.Priorities)
                                {
                                    <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0 border-sc">
                                        <span class="fw-500">@prio.Name</span>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-action" onclick="editItem(@prio.Id, '@prio.Name', 'UpsertPriority')"><i class="bi bi-pencil"></i></button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Departments -->
                <div class="col-12">
                    <div class="card glass border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0 pt-4 px-4">
                            <h5 class="fw-700 mb-0">Departments</h5>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="UpsertDepartment" method="post" class="mb-4">
                                <div class="input-group">
                                    <input type="text" name="name" class="form-control" placeholder="New Department..." required />
                                    <button type="submit" class="btn btn-primary px-3"><i class="bi bi-plus-lg"></i></button>
                                </div>
                            </form>
                            <div class="list-group list-group-flush">
                                @foreach (var dept in (List<ServiceCore.Models.Department>)ViewBag.Departments)
                                {
                                    <div class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0 border-sc">
                                        <span class="fw-500">@dept.Name</span>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-action" onclick="editItem(@dept.Id, '@dept.Name', 'UpsertDepartment')"><i class="bi bi-pencil"></i></button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Category Upsert Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass shadow-lg border-0">
            <div class="modal-header border-0 pb-0 px-4">
                <h5 class="modal-title fw-700" id="categoryModalTitle">Add/Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="UpsertCategory" method="post">
                    <input type="hidden" id="categoryId" name="id" />
                    <div class="mb-3">
                        <label class="form-label fw-600 small">Category Name</label>
                        <input type="text" id="categoryName" name="name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-600 small">Parent Category</label>
                        <select id="categoryParentId" name="parentId" class="form-select">
                            <option value="">-- No Parent (Root Category) --</option>
                            @foreach (var cat in categories.OrderBy(c => c.Name))
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </select>
                    </div>
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary px-4">Save Category</button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Simple Edit Modal (for Priorities/Departments) -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass shadow-lg border-0">
            <div class="modal-header border-0 pb-0 px-4">
                <h5 class="modal-title fw-700">Edit Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="editForm" method="post">
                    <input type="hidden" id="editId" name="id" />
                    <div class="mb-3">
                        <label class="form-label fw-600 small">Name</label>
                        <input type="text" id="editName" name="name" class="form-control" required />
                    </div>
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function editItem(id, name, action) {
        document.getElementById('editId').value = id;
        document.getElementById('editName').value = name;
        document.getElementById('editForm').action = '/Admin/' + action;
        new bootstrap.Modal(document.getElementById('editModal')).show();
    }

    function openCreateCategoryModal() {
        document.getElementById('categoryId').value = '';
        document.getElementById('categoryName').value = '';
        document.getElementById('categoryParentId').value = '';
        document.getElementById('categoryModalTitle').innerText = 'New Category';
        new bootstrap.Modal(document.getElementById('categoryModal')).show();
    }

    function editCategory(id, name, parentId) {
        document.getElementById('categoryId').value = id;
        document.getElementById('categoryName').value = name;
        document.getElementById('categoryParentId').value = parentId || '';
        document.getElementById('categoryModalTitle').innerText = 'Edit Category';
        
        // Prevent selecting itself as parent
        const parentSelect = document.getElementById('categoryParentId');
        Array.from(parentSelect.options).forEach(opt => {
            opt.disabled = (opt.value == id);
        });

        new bootstrap.Modal(document.getElementById('categoryModal')).show();
    }
</script>

<style>
    .category-tree ul {
        list-style: none;
        padding-left: 1.5rem;
    }
    .category-tree > ul {
        padding-left: 0;
    }
    .category-item {
        margin-bottom: 0.5rem;
        padding: 0.5rem;
        border-radius: 6px;
        transition: background-color 0.2s;
    }
    .category-item:hover {
        background-color: rgba(0,0,0,0.05);
    }
    [data-theme='dark'] .category-item:hover {
        background-color: rgba(255,255,255,0.05);
    }
    .category-node::before {
        content: '\F623';
        font-family: 'bootstrap-icons';
        margin-right: 0.5rem;
        opacity: 0.5;
    }
</style>
