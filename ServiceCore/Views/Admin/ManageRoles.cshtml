@model List<ServiceCore.Models.Role>
@{
    ViewData["Title"] = "Manage Roles";
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="display-6 fw-bold mb-1">Manage Roles</h1>
            <p class="text-muted mb-0">Define organizational roles and their specific access levels.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Admin</a>
    </div>

    <div class="row g-4">
        <!-- Create Role Card -->
        <div class="col-md-4">
            <div class="card glass border-0 shadow-lg">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Create New Role</h5>
                    <form asp-action="CreateRole" method="post">
                        <div class="mb-3">
                            <label class="form-label smaller-2 fw-700 text-muted">ROLE NAME</label>
                            <input type="text" name="name" class="form-control form-control-lg bg-light border-0" placeholder="e.g. Supervisor" required>
                        </div>
                        <div class="mb-4">
                            <label class="form-label smaller-2 fw-700 text-muted">DESCRIPTION</label>
                            <textarea name="description" class="form-control bg-light border-0" rows="3" placeholder="Brief role summary..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold">
                            <i class="bi bi-plus-circle me-2"></i>Save Role
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Roles List -->
        <div class="col-md-8">
            <div class="card glass border-0 shadow-lg overflow-hidden">
                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted smaller-1 fw-700">
                            <tr>
                                <th class="ps-4">ROLE NAME</th>
                                <th>DESCRIPTION</th>
                                <th class="text-end pe-4">ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-700 text-dark">@role.Name</div>
                                    </td>
                                    <td>
                                        <div class="smaller-1 text-muted">@role.Description</div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="ManagePermissions" asp-route-selectedRole="@role.Name" class="btn btn-sm btn-outline-primary fw-600">
                                            <i class="bi bi-shield-lock me-1"></i> Permissions
                                        </a>
                                        <button class="btn btn-sm btn-light border ms-1" onclick="editRole('@role.Id', '@role.Name', '@role.Description')">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Role Modal -->
<div class="modal fade" id="editRoleModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass border-0 shadow">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Edit Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateRole" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" id="editRoleId">
                    <div class="mb-3">
                        <label class="form-label smaller-2 fw-700 text-muted">ROLE NAME</label>
                        <input type="text" name="name" id="editRoleName" class="form-control bg-light border-0" required>
                    </div>
                    <div class="mb-0">
                        <label class="form-label smaller-2 fw-700 text-muted">DESCRIPTION</label>
                        <textarea name="description" id="editRoleDescription" class="form-control bg-light border-0" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editRole(id, name, desc) {
            try {
                document.getElementById('editRoleId').value = id;
                document.getElementById('editRoleName').value = name;
                document.getElementById('editRoleDescription').value = desc;
                
                const modalEl = document.getElementById('editRoleModal');
                const modal = bootstrap.Modal.getOrCreateInstance(modalEl); 
                modal.show();
            } catch (e) {
                console.error("Error opening edit modal:", e);
                alert("Failed to open edit modal. Check console.");
            }
        }
    </script>
}
