@model List<ServiceCore.Models.RolePermission>
@{
    ViewData["Title"] = "Role Permissions";
    var roles = (List<string>)ViewBag.Roles;
    var features = (List<string>)ViewBag.Features;
    var selectedRole = (string)ViewBag.SelectedRole;
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="display-6 fw-bold mb-1">Identity & Access</h1>
            <p class="text-muted mb-0">Configuring permissions for role: <span class="text-primary fw-700">@selectedRole</span></p>
        </div>
        <div>
            <button onclick="savePermissions(this, '@selectedRole')" class="btn btn-primary shadow-sm me-2">
                <i class="bi bi-save me-2"></i>Save Changes
            </button>
            <a asp-action="ManageRoles" class="btn btn-outline-primary btn-sm me-2">Manage Roles</a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Admin</a>
        </div>
    </div>

    <!-- Role Selection Tabs -->
    <div class="card glass border-0 shadow-sm mb-4">
        <div class="card-body p-2">
            <ul class="nav nav-pills nav-fill">
                @foreach (var role in roles)
                {
                    <li class="nav-item">
                        <a class="nav-link @(role == selectedRole ? "active" : "") fw-600" 
                           asp-action="ManagePermissions" asp-route-selectedRole="@role">
                            @role
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="card glass border-0 shadow-lg overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted smaller-1 fw-700">
                        <tr>
                            <th class="ps-4">FEATURE / MODULE</th>
                            <th>DESCRIPTION</th>
                            <th class="text-center pe-4" style="width: 150px;">ACCESS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feature in features)
                        {
                            var perm = Model.FirstOrDefault(p => p.FeatureKey == feature);
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-700 text-dark">@feature.Replace("_", " ")</div>
                                </td>
                                <td>
                                    <div class="smaller-1 text-muted">Grant access to the @feature.ToLower() system components.</div>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input permission-toggle" type="checkbox" 
                                               role="switch" 
                                               data-feature="@feature"
                                               @(perm?.IsAllowed == true ? "checked" : "")>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function savePermissions(btn, role) {
            try {
                const permissions = {};
                document.querySelectorAll('.permission-toggle').forEach(checkbox => {
                    const feature = checkbox.getAttribute('data-feature');
                    const allowed = checkbox.checked;
                    permissions[feature] = allowed;
                });

                const originalText = btn.innerHTML;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saving...';
                btn.disabled = true;

                fetch('/Admin/UpdateBulkPermissions?role=' + encodeURIComponent(role), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(permissions)
                })
                .then(response => {
                    if (!response.ok) throw new Error('Network response was not ok');
                    return response.json();
                })
                .then(res => {
                    if (res.success) {
                        setTimeout(() => {
                            btn.innerHTML = '<i class="bi bi-check-lg me-2"></i>Saved!';
                            btn.classList.remove('btn-primary');
                            btn.classList.add('btn-success');
                            setTimeout(() => {
                                btn.innerHTML = originalText;
                                btn.classList.remove('btn-success');
                                btn.classList.add('btn-primary');
                                btn.disabled = false;
                            }, 2000);
                        }, 500);
                    } else {
                        alert('Error: ' + (res.message || 'Unknown error'));
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while saving permissions. Check console for details.');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                });
            } catch (e) {
                alert('Synchronous Error: ' + e.message);
                console.error(e);
            }
        }
    </script>
}
