@model IEnumerable<ServiceCore.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 fw-bold">Projects</h1>
            <p class="text-secondary small mb-0">Manage projects across the organization.</p>
        </div>
        <a class="btn btn-primary d-flex align-items-center gap-2" href="/ProjectsManager/Create">
            <i class="bi bi-plus-lg"></i> New Project
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Owner</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@p.Id"
                                       class="text-decoration-none text-dark fw-bold">@p.Name</a>
                                </td>
                                <td>@p.Status</td>
                                <td>@p.Owner?.Name</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-light" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                                    <form method="post" asp-action="Delete" asp-route-id="@p.Id" style="display:inline">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>