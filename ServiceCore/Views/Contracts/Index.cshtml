@model List<ServiceCore.Models.Contract>
@{
    ViewData["Title"] = "Contract Dashboard";
    var expiringSoon = ViewBag.ExpiringSoon ?? 0;
    var totalValue = (decimal)(ViewBag.TotalValue ?? 0m);
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="display-6 fw-bold mb-1">Contract Management</h1>
            <p class="text-muted mb-0">Centralized lifecycle tracking for all agreements.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Vendors" class="btn btn-outline-primary shadow-sm">
                <i class="bi bi-briefcase me-2"></i>Vendors
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="ContractTypes" class="btn btn-outline-secondary shadow-sm">
                    <i class="bi bi-tags me-2"></i>Contract Types
                </a>
            }
            <secure-content asp-authorize="@ServiceCore.Constants.Permissions.Contracts_Manage">
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>New Contract
            </a>
            </secure-content>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-5">
        <div class="col-12 col-md-4">
            <div class="card glass border-0 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-primary-subtle text-primary me-3">
                        <i class="bi bi-file-earmark-check fs-4"></i>
                    </div>
                    <h6 class="mb-0 text-muted fw-600">Active Contracts</h6>
                </div>
                <h2 class="fw-bold mb-0">@Model.Count</h2>
                <div class="mt-2 smaller-1 text-success"><i class="bi bi-arrow-up me-1"></i>System is healthy</div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card glass border-0 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-warning-subtle text-warning me-3">
                        <i class="bi bi-clock-history fs-4"></i>
                    </div>
                    <h6 class="mb-0 text-muted fw-600">Expiring Soon</h6>
                </div>
                <h2 class="fw-bold mb-0">@expiringSoon</h2>
                <div class="mt-2 smaller-1 text-muted">Within 30 days</div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card glass border-0 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-success-subtle text-success me-3">
                        <i class="bi bi-currency-dollar fs-4"></i>
                    </div>
                    <h6 class="mb-0 text-muted fw-600">Total Active Value</h6>
                </div>
                <h2 class="fw-bold mb-0">@totalValue.ToString("C")</h2>
                <div class="mt-2 smaller-1 text-muted">Annual recurring cost</div>
            </div>
        </div>
    </div>

    <!-- Contracts Table -->
    <div class="card glass border-0 shadow-lg overflow-hidden">
        <div class="card-header bg-transparent border-0 pt-4 px-4">
            <h5 class="fw-700 mb-0">Active Contracts List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted smaller-1 fw-700">
                        <tr>
                            <th class="ps-4">CONTRACT NAME</th>
                            <th>VENDOR</th>
                            <th>TYPE</th>
                            <th>DATES</th>
                            <th>VALUE</th>
                            <th class="text-center pe-4" style="width: 150px;">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted italic">No active contracts found.</td>
                            </tr>
                        }
                        @foreach (var contract in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-700 text-dark">@contract.Name</div>
                                    <div class="smaller-2 text-muted">#@contract.Number</div>
                                </td>
                                <td>
                                    <div class="fw-600">@contract.Vendor?.Name</div>
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary smaller-2 px-2">@contract.ContractType?.Name</span>
                                </td>
                                <td>
                                    <div class="smaller-1">
                                        <div class="text-dark">End: @contract.EndDate.ToString("MMM dd, yyyy")</div>
                                        <div class="text-muted smaller-2">Start: @contract.StartDate.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-700 text-success">@contract.Value.ToString("C")</div>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@contract.Id" class="btn btn-sm btn-action" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <secure-content asp-authorize="@ServiceCore.Constants.Permissions.Contracts_Manage">
                                        <a asp-action="Edit" asp-route-id="@contract.Id" class="btn btn-sm btn-action" title="Edit Contract">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        </secure-content>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-box {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .btn-action {
        width: 32px;
        height: 32px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        background: rgba(0,0,0,0.03);
        margin: 0 2px;
    }
    .btn-action:hover {
        background: var(--sc-primary);
        color: white;
    }
</style>
