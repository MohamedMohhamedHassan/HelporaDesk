@model List<ServiceCore.Models.Contract>
@{
    ViewData["Title"] = "Contract Reports";
}

<div class="content">
    <div class="mb-5">
        <h1 class="display-6 fw-bold mb-1">Analytics & Reporting</h1>
        <p class="text-muted">Financial performance and compliance metrics for all contracts.</p>
    </div>

    <!-- Quick Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm p-3">
                <div class="smaller-2 fw-700 text-muted uppercase mb-1">Active Value</div>
                <h3 class="fw-bold text-success">@(((decimal)ViewBag.TotalActiveValue).ToString("C"))</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm p-3">
                <div class="smaller-2 fw-700 text-muted uppercase mb-1">Pending Approval</div>
                <h3 class="fw-bold text-warning">@ViewBag.PendingApprovals</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm p-3">
                <div class="smaller-2 fw-700 text-muted uppercase mb-1">Expiring < 30 Days</div>
                <h3 class="fw-bold text-danger">@ViewBag.ExpiringSoon</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card glass border-0 shadow-sm p-3">
                <div class="smaller-2 fw-700 text-muted uppercase mb-1">Total Contracts</div>
                <h3 class="fw-bold">@Model.Count</h3>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Distribution by Vendor -->
        <div class="col-md-6">
            <div class="card glass border-0 shadow-sm p-4">
                <h6 class="fw-700 mb-4">Cost Distribution by Vendor</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-borderless align-middle smaller-1">
                        <thead>
                            <tr class="text-muted border-bottom">
                                <th>VENDOR</th>
                                <th class="text-end">CONTRACTS</th>
                                <th class="text-end">TOTAL VALUE</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var g in Model.GroupBy(c => c.Vendor?.Name ?? "Unknown").OrderByDescending(g => g.Sum(c => c.Value)))
                            {
                                <tr>
                                    <td class="fw-600">@g.Key</td>
                                    <td class="text-end">@g.Count()</td>
                                    <td class="text-end fw-700">@g.Sum(c => c.Value).ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Distribution by Type -->
        <div class="col-md-6">
            <div class="card glass border-0 shadow-sm p-4">
                <h6 class="fw-700 mb-4">Contracts by Type</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-borderless align-middle smaller-1">
                        <thead>
                            <tr class="text-muted border-bottom">
                                <th>TYPE</th>
                                <th class="text-end">COUNT</th>
                                <th class="text-end">PERCENTAGE</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var total = Model.Count;
                            }
                            @foreach (var g in Model.GroupBy(c => c.ContractType?.Name ?? "General").OrderByDescending(g => g.Count()))
                            {
                                <tr>
                                    <td class="fw-600">@g.Key</td>
                                    <td class="text-end">@g.Count()</td>
                                    <td class="text-end">@((g.Count() * 100.0 / (total > 0 ? total : 1)).ToString("N1"))%</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .uppercase { text-transform: uppercase; }
</style>
