@model ServiceCore.Models.Contract
@{
    ViewData["Title"] = "Edit Contract";
    var vendors = (List<ServiceCore.Models.Vendor>)ViewBag.Vendors;
    var types = (List<ServiceCore.Models.ContractType>)ViewBag.ContractTypes;
}

<div class="content">
    <div class="mb-5">
        <h1 class="display-6 fw-bold mb-1">Edit Contract</h1>
        <p class="text-muted">Modify agreement details and terms.</p>
    </div>

    <div class="row">
        <div class="col-12 col-xl-9">
            <div class="card glass border-0 shadow-lg p-4 p-md-5">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="CreatedById" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="row g-4 mb-5">
                        <div class="col-12">
                            <h5 class="fw-700 mb-0">General Information</h5>
                            <hr class="mt-2 opacity-10" />
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Name" class="form-label fw-600 small">Contract Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger smaller-2"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Number" class="form-label fw-600 small">Contract Number</label>
                            <input asp-for="Number" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VendorId" class="form-label fw-600 small">Vendor</label>
                            <select asp-for="VendorId" class="form-select" required>
                                @foreach (var v in vendors)
                                {
                                    <option value="@v.Id">@v.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ContractTypeId" class="form-label fw-600 small">Contract Type</label>
                            <select asp-for="ContractTypeId" class="form-select" required>
                                @foreach (var t in types)
                                {
                                    <option value="@t.Id">@t.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row g-4 mb-5">
                        <div class="col-12">
                            <h5 class="fw-700 mb-0">Lifecycle & Financials</h5>
                            <hr class="mt-2 opacity-10" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="StartDate" class="form-label fw-600 small">Start Date</label>
                            <input asp-for="StartDate" class="form-control" type="date" required />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="EndDate" class="form-label fw-600 small">End Date</label>
                            <input asp-for="EndDate" class="form-control" type="date" required />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="RenewalDate" class="form-label fw-600 small">Renewal Date</label>
                            <input asp-for="RenewalDate" class="form-control" type="date" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Value" class="form-label fw-600 small">Value</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Value" class="form-control" type="number" step="0.01" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Currency" class="form-label fw-600 small">Currency</label>
                            <input asp-for="Currency" class="form-control" />
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-12">
                            <h5 class="fw-700 mb-0">Terms</h5>
                            <hr class="mt-2 opacity-10" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SLADetails" class="form-label fw-600 small">SLA Details</label>
                            <textarea asp-for="SLADetails" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PaymentTerms" class="form-label fw-600 small">Payment Terms</label>
                            <textarea asp-for="PaymentTerms" class="form-control" rows="4"></textarea>
                        </div>
                    </div>

                    <div class="d-flex gap-3 justify-content-end mt-5 border-top pt-4">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-5">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
