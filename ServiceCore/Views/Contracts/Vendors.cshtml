@model List<ServiceCore.Models.Vendor>
@{
    ViewData["Title"] = "Vendors";
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-end">
        <div>
            <h1 class="display-6 fw-bold mb-1">Vendors</h1>
            <p class="text-muted mb-0">Manage service providers and external partners.</p>
        </div>
        <button class="btn btn-primary shadow-sm" onclick="openVendorModal()">
            <i class="bi bi-plus-circle me-2"></i>New Vendor
        </button>
    </div>

    <div class="card glass border-0 shadow-lg overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted smaller-1 fw-700">
                        <tr>
                            <th class="ps-4">VENDOR NAME</th>
                            <th>CONTACT PERSON</th>
                            <th>EMAIL / PHONE</th>
                            <th>WEBSITE</th>
                            <th class="text-center pe-4" style="width: 150px;">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted italic">No vendors registered yet.</td>
                            </tr>
                        }
                        @foreach (var vendor in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-700 text-dark">@vendor.Name</div>
                                    <div class="smaller-2 text-muted">Registered: @vendor.CreatedAt.ToString("MMM dd, yyyy")</div>
                                </td>
                                <td>
                                    <div class="fw-600">@vendor.ContactPerson</div>
                                </td>
                                <td>
                                    <div class="smaller-1">@vendor.Email</div>
                                    <div class="smaller-2 text-muted">@vendor.Phone</div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vendor.Website))
                                    {
                                        <a href="@vendor.Website" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-link-45deg me-1"></i>Web
                                        </a>
                                    }
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-action" onclick="editVendor(@vendor.Id, '@Html.Raw(vendor.Name.Replace("'", "\\'"))', '@Html.Raw((vendor.ContactPerson ?? "").Replace("'", "\\'"))', '@vendor.Email', '@vendor.Phone', '@vendor.Website', '@Html.Raw((vendor.Address ?? "").Replace("'", "\\'"))', '@Html.Raw((vendor.Description ?? "").Replace("'", "\\'"))')">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Vendor Modal -->
<div class="modal fade" id="vendorModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content glass shadow-lg border-0">
            <div class="modal-header border-0 pb-0 px-4">
                <h5 class="modal-title fw-700" id="vendorModalTitle">Add New Vendor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="UpsertVendor" method="post">
                    <input type="hidden" id="vendorId" name="Id" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-600 small">Vendor Name</label>
                            <input type="text" id="vName" name="Name" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-600 small">Contact Person</label>
                            <input type="text" id="vContact" name="ContactPerson" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-600 small">Email Address</label>
                            <input type="email" id="vEmail" name="Email" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-600 small">Phone Number</label>
                            <input type="tel" id="vPhone" name="Phone" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-600 small">Website URL</label>
                            <input type="url" id="vWebsite" name="Website" class="form-control" placeholder="https://..." />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-600 small">Office Address</label>
                            <textarea id="vAddress" name="Address" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-600 small">Notes / Description</label>
                            <textarea id="vDescription" name="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary px-4">Save Vendor</button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Wait for DOM to be fully loaded and bootstrap to be available
        document.addEventListener('DOMContentLoaded', function() {
            const modalEl = document.getElementById('vendorModal');
            let modal = null;
            if (modalEl && window.bootstrap) {
                modal = new bootstrap.Modal(modalEl);
            }

            window.openVendorModal = function() {
                if (!modal) return;
                document.getElementById('vendorId').value = '0';
                document.getElementById('vName').value = '';
                document.getElementById('vContact').value = '';
                document.getElementById('vEmail').value = '';
                document.getElementById('vPhone').value = '';
                document.getElementById('vWebsite').value = '';
                document.getElementById('vAddress').value = '';
                document.getElementById('vDescription').value = '';
                document.getElementById('vendorModalTitle').innerText = 'Add New Vendor';
                modal.show();
            };

            window.editVendor = function(id, name, contact, email, phone, website, address, desc) {
                if (!modal) return;
                document.getElementById('vendorId').value = id;
                document.getElementById('vName').value = name;
                document.getElementById('vContact').value = contact;
                document.getElementById('vEmail').value = email;
                document.getElementById('vPhone').value = phone;
                document.getElementById('vWebsite').value = website;
                document.getElementById('vAddress').value = address;
                document.getElementById('vDescription').value = desc;
                document.getElementById('vendorModalTitle').innerText = 'Edit Vendor';
                modal.show();
            };
        });
    </script>
}

<style>
    .btn-action {
        width: 32px;
        height: 32px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        background: rgba(0,0,0,0.03);
    }
    .btn-action:hover {
        background: var(--sc-primary);
        color: white;
    }
</style>
