@model ServiceCore.Models.Contract
@{
    ViewData["Title"] = Model.Name;
    var statusClass = Model.Status switch {
        "Active" => "bg-success",
        "Draft" => "bg-secondary",
        "Pending Approval" => "bg-warning",
        "Expired" => "bg-danger",
        _ => "bg-dark"
    };
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-start">
        <div>
            <div class="d-flex align-items-center gap-2 mb-2">
                <span class="badge @statusClass px-3">@Model.Status</span>
                <span class="text-muted smaller-1">#@Model.Number</span>
            </div>
            <h1 class="display-6 fw-bold mb-1">@Model.Name</h1>
            <p class="text-muted mb-0">Contract with <span class="fw-700 text-dark">@Model.Vendor?.Name</span></p>
        </div>
        <div class="d-flex gap-2">
            @if (Model.Status == "Draft")
            {
                <form asp-action="SubmitForApproval" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-success shadow-sm">
                        <i class="bi bi-send-check me-2"></i>Submit for Approval
                    </button>
                </form>
            }
            @if (Model.Status == "Pending Approval" && User.IsInRole("Admin"))
            {
                <button class="btn btn-success shadow-sm" data-bs-toggle="modal" data-bs-target="#approveModal">
                    <i class="bi bi-check-circle me-2"></i>Approve
                </button>
                <button class="btn btn-danger shadow-sm" data-bs-toggle="modal" data-bs-target="#rejectModal">
                    <i class="bi bi-x-circle me-2"></i>Reject
                </button>
            }
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary shadow-sm">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">Back</a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Info -->
        <div class="col-12 col-xl-8">
            <div class="card glass border-0 shadow-sm mb-4 p-4 p-md-5">
                <div class="row g-5">
                    <div class="col-md-6">
                        <h6 class="text-muted fw-700 smaller-1 ls-1 uppercase mb-3">FINANCIALS</h6>
                        <h2 class="fw-bold text-success mb-1">@Model.Value.ToString("C")</h2>
                        <div class="text-muted smaller-2">Annual recurring cost in @Model.Currency</div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted fw-700 smaller-1 ls-1 uppercase mb-3">TIMELINE</h6>
                        <div class="d-flex align-items-center gap-3">
                            <div>
                                <div class="smaller-2 fw-700">START</div>
                                <div class="fw-600">@Model.StartDate.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div class="opacity-25"><i class="bi bi-arrow-right"></i></div>
                            <div>
                                <div class="smaller-2 fw-700">EXPIRY</div>
                                <div class="fw-600 text-danger">@Model.EndDate.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <hr class="opacity-10" />
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted fw-700 smaller-1 ls-1 uppercase mb-2">SLA DETAILS</h6>
                        <p class="smaller-1 text-dark whitespace-pre">@Model.SLADetails</p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted fw-700 smaller-1 ls-1 uppercase mb-2">PAYMENT TERMS</h6>
                        <p class="smaller-1 text-dark whitespace-pre">@Model.PaymentTerms</p>
                    </div>
                </div>
            </div>

            <!-- Attachments -->
            <div class="card glass border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent border-0 pt-4 px-4 d-flex justify-content-between">
                    <h6 class="fw-700 mb-0 ls-1 uppercase">ATTACHMENTS</h6>
                    <button class="btn btn-sm btn-outline-primary" onclick="document.getElementById('fileUpload').click()">
                        <i class="bi bi-upload me-1"></i>Upload File
                    </button>
                    <form asp-action="UploadAttachment" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="d-none">
                        <input type="file" id="fileUpload" name="file" onchange="this.form.submit()" />
                    </form>
                </div>
                <div class="card-body p-4 pt-2">
                    @if (!Model.Attachments.Any())
                    {
                        <div class="text-center py-4 text-muted smaller-1 italic">No documents attached.</div>
                    }
                    @foreach (var att in Model.Attachments)
                    {
                        <div class="d-flex align-items-center justify-content-between p-2 rounded bg-light mb-2">
                            <div class="d-flex align-items-center gap-3">
                                <i class="bi bi-file-earmark-pdf fs-4 text-danger"></i>
                                <div>
                                    <div class="fw-600 smaller-1">@att.FileName</div>
                                    <div class="smaller-2 text-muted">@((att.FileSize / 1024.0).ToString("N1")) KB â€¢ @att.UploadedAt.ToString("g")</div>
                                </div>
                            </div>
                            <a href="@att.FilePath" target="_blank" class="btn btn-sm btn-link text-primary"><i class="bi bi-download"></i></a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar Activity -->
        <div class="col-12 col-xl-4">
            <div class="card glass border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h6 class="fw-700 mb-0 ls-1 uppercase">VENDOR INFORMATION</h6>
                </div>
                <div class="card-body p-4 pt-2">
                    <div class="fw-700 text-primary fs-5 mb-1">@Model.Vendor?.Name</div>
                    <div class="smaller-1 text-muted mb-3">@Model.Vendor?.ContactPerson</div>
                    <div class="d-grid gap-2">
                        <div class="smaller-1 d-flex align-items-center gap-2">
                            <i class="bi bi-envelope opacity-50"></i> @Model.Vendor?.Email
                        </div>
                        <div class="smaller-1 d-flex align-items-center gap-2">
                            <i class="bi bi-telephone opacity-50"></i> @Model.Vendor?.Phone
                        </div>
                    </div>
                </div>
            </div>

            <div class="card glass border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h6 class="fw-700 mb-0 ls-1 uppercase">HISTORY LOG</h6>
                </div>
                <div class="card-body p-4 pt-2">
                    <div class="history-list">
                        @foreach (var log in Model.History.OrderByDescending(h => h.Timestamp))
                        {
                            <div class="history-item pb-3">
                                <div class="d-flex gap-2 align-items-baseline">
                                    <div class="dot" style="width: 8px; height: 8px; border-radius: 50%; background: var(--sc-primary)"></div>
                                    <div class="fw-700 smaller-1">@log.Action</div>
                                </div>
                                <div class="ps-3 border-start ms-1 py-1">
                                    <div class="smaller-2 text-dark">@log.Notes</div>
                                    <div class="smaller-2 text-muted mt-1">@log.Timestamp.ToString("MMM dd, HH:mm")</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass border-0 shadow-lg">
            <div class="modal-header border-0 pb-0 px-4">
                <h5 class="modal-title fw-700">Approve Contract</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="Approve" asp-route-id="@Model.Id" method="post">
                    <p class="smaller-1 text-muted mb-3">By approving, this contract will be set to <strong>Active</strong> and monitoring will begin.</p>
                    <label class="form-label fw-600 small">Approval Comments (Optional)</label>
                    <textarea name="comments" class="form-control mb-4" rows="3" placeholder="Looks good..."></textarea>
                    <div class="d-flex gap-2 justify-content-end">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success px-4">Confirm Approval</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass border-0 shadow-lg">
            <div class="modal-header border-0 pb-0 px-4">
                <h5 class="modal-title fw-700">Reject Contract</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="Reject" asp-route-id="@Model.Id" method="post">
                    <p class="smaller-1 text-muted mb-3">Please provide a reason for rejection. The contract will return to <strong>Draft</strong> status.</p>
                    <label class="form-label fw-600 small">Rejection Reason</label>
                    <textarea name="comments" class="form-control mb-4" rows="3" required placeholder="Terms are incorrect..."></textarea>
                    <div class="d-flex gap-2 justify-content-end">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger px-4">Confirm Rejection</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .whitespace-pre { white-space: pre-wrap; }
    .ls-1 { letter-spacing: 0.1rem; }
    .uppercase { text-transform: uppercase; }
    .history-item:last-child .border-start { border-left: none !important; }
</style>
