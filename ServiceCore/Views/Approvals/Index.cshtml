@model IEnumerable<ServiceCore.Models.Approval>
@{
    ViewData["Title"] = "Approvals Center";
}

<div class="content">
    <div class="mb-5 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-6 fw-bold mb-1">Approvals Center</h1>
            <p class="text-muted mb-0">Manage organizational sign-offs and authorization requests.</p>
        </div>
    </div>

    <div class="card glass border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted smaller-1 fw-700">
                        <tr>
                            <th class="ps-4">REQUEST</th>
                            <th>TYPE</th>
                            <th>REQUESTER</th>
                            <th>CREATED</th>
                            <th>STATUS</th>
                            <th class="text-end pe-4">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody class="smaller-1">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-700 text-dark">@item.Subject</div>
                                    <div class="smaller-2 text-muted">#@(item.RelatedId ?? 0) - @item.Description</div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border fw-500">@item.RequestType?.Replace("_", " ")</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-2">@item.Requester?.Name?.Substring(0,1)</div>
                                        <span>@item.Requester?.Name</span>
                                    </div>
                                </td>
                                <td class="text-muted">@item.CreatedAt.ToString("MMM dd, HH:mm")</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning-subtle text-warning border-0 px-2 fw-600">Pending</span>
                                            break;
                                        case "Approved":
                                            <span class="badge bg-success-subtle text-success border-0 px-2 fw-600">Approved</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger-subtle text-danger border-0 px-2 fw-600">Rejected</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    @if (item.Status == "Pending")
                                    {
                                        <button class="btn btn-sm btn-outline-success border-0 fw-600 me-1" 
                                                onclick="openActionModal(@item.Id, 'Approved')">Approve</button>
                                        <button class="btn btn-sm btn-outline-danger border-0 fw-600" 
                                                onclick="openActionModal(@item.Id, 'Rejected')">Reject</button>
                                    }
                                    else
                                    {
                                        <span class="text-muted smaller-2">Acted on @item.ActedAt?.ToString("MMM dd")</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Action Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass border-0 shadow-lg">
            <div class="modal-header border-0 pb-0 pt-4 px-4">
                <h5 class="modal-title fw-bold" id="modalTitle">Approval Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Approvals/Action" method="post">
                <input type="hidden" name="id" id="approvalId" />
                <input type="hidden" name="status" id="approvalStatus" />
                <div class="modal-body p-4">
                    <div class="mb-0">
                        <label class="form-label small fw-600">Decision Comments</label>
                        <textarea class="form-control border-sc" name="comments" rows="3" placeholder="Provide context for your decision..."></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0 pb-4 px-4">
                    <button type="button" class="btn btn-sc-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-sc-primary px-5" id="submitBtn">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openActionModal(id, status) {
            document.getElementById('approvalId').value = id;
            document.getElementById('approvalStatus').value = status;
            document.getElementById('modalTitle').innerText = status + ' Request';
            document.getElementById('submitBtn').innerText = 'Confirm ' + status;
            document.getElementById('submitBtn').className = status === 'Approved' ? 'btn btn-success px-5' : 'btn btn-danger px-5';
            new bootstrap.Modal(document.getElementById('approvalModal')).show();
        }
    </script>
}
