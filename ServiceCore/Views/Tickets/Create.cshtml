@model ServiceCore.Models.Ticket
@{
    ViewData["Title"] = "Create Ticket";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h2 class="h4 fw-bold mb-0">Submit a Request</h2>
                    <p class="text-muted small">Please provide details about your issue.</p>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Subject</label>
                            <input class="form-control" asp-for="Subject" placeholder="Brief summary of the issue" required />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <textarea class="form-control" asp-for="Description" rows="5" placeholder="Detailed explanation..." required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Category</label>
                                <select class="form-select" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))" required>
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Priority</label>
                                <select class="form-select" asp-for="PriorityId" asp-items="@(new SelectList(ViewBag.Priorities, "Id", "Name"))" required>
                                    <option value="">-- Select Priority --</option>
                                </select>
                                <span asp-validation-for="PriorityId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Attachments (Optional)</label>
                            <input type="file" class="form-control" name="attachments" multiple accept="image/*,.pdf,.doc,.docx,.txt,.zip">
                            <div class="form-text">Max 5 files, 10MB each. Images, PDF, Docs, Zip.</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Submit Request</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
