using System.Linq;
using Microsoft.AspNetCore.Mvc;
using ServiceCore.Data;
using ServiceCore.Models;

namespace ServiceCore.Controllers
{
    public class AssetsController : Controller
    {
        private readonly ServiceCoreDbContext _db;

        public AssetsController(ServiceCoreDbContext db)
        {
            _db = db;
        }

        public IActionResult Index()
        {
            var assets = _db.Assets.ToList();
            return View(assets);
        }

        [HttpGet]
        public IActionResult Create()
        {
            return View();
        }

        [HttpPost]
        public IActionResult Create(Asset asset)
        {
            if (!ModelState.IsValid) return View(asset);
            _db.Assets.Add(asset);
            _db.SaveChanges();
            return RedirectToAction(nameof(Index));
        }

        [HttpGet]
        public IActionResult Edit(int id)
        {
            var asset = _db.Assets.FirstOrDefault(a => a.Id == id);
            if (asset == null) return NotFound();
            return View(asset);
        }

        [HttpPost]
        public IActionResult Edit(Asset asset)
        {
            if (!ModelState.IsValid) return View(asset);
            _db.Assets.Update(asset);
            _db.SaveChanges();
            return RedirectToAction(nameof(Index));
        }

        [HttpPost]
        public IActionResult Delete(int id)
        {
            var asset = _db.Assets.FirstOrDefault(a => a.Id == id);
            if (asset == null) return NotFound();
            _db.Assets.Remove(asset);
            _db.SaveChanges();
            return RedirectToAction(nameof(Index));
        }
    }
}
